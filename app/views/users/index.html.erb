<div class="container">
  <div class='row'>
    <h1>Listing Users</h1>
    <table>
      <tr>
        <th>user</th>
        <th></th>
      </tr>
      <% @users.all.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= link_to "Edit", edit_user_path(user) %> <%= link_to "Delete", user,method: :delete,data:{confirm:"Are you serious?"} %> </td>
      </tr>
      <% end %>
      <% if @users.size == 0 %>
      <tr>
        <td colspan = '3'><em>No users found</em></td>
      </tr>
      <% end %>
    </table>
    <%= link_to "New user",new_user_path() %> || <%= link_to "New task",new_task_path() %>

  </div>
</div>
