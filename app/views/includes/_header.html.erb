    <html lang="en">
      <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
        <title>Todo APP</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
        <%= csrf_meta_tags %>
      </head>
      <body class="mdl-demo mdl-color--grey-100 mdl-color-text--grey-700 mdl-base">
        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
          <header class="mdl-layout__header mdl-layout__header--scroll mdl-color--primary">
            <div class="mdl-layout--large-screen-only mdl-layout__header-row">
            </div>
            <div class="mdl-layout--large-screen-only mdl-layout__header-row">
              <h3>Todo App</h3>
            </div>
            <div class="mdl-layout--large-screen-only mdl-layout__header-row">
            </div>
            <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--primary-dark">
              <% if logged_in? %>
              <%= link_to "Todo", root_path, class: (current_page?(root_path) ? 'mdl-layout__tab is-active': 'mdl-layout__tab') %>
              <%= link_to "Completed", completed_path, class: (current_page?(completed_path) ? 'mdl-layout__tab is-active': 'mdl-layout__tab') %>
              <%= link_to "Account", current_user, class: (current_page?(user_path(current_user)) ? 'mdl-layout__tab is-active': 'mdl-layout__tab') %>
              <%= link_to "Log out", logout_path, method: :delete,class: 'mdl-layout__tab' %>
              <% else %>
              <%= link_to "Login", login_path(),class: (current_page?(login_path) ? 'mdl-layout__tab is-active': 'mdl-layout__tab') %>
              <%= link_to "How It works", help_path,class: (current_page?(help_path) ? 'mdl-layout__tab is-active': 'mdl-layout__tab') %>
              <% end %>
              <% if logged_in? %>
              <a href='/tasks/new' class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" id="add">
                <i class="material-icons" role="presentation">add</i>
                <span class="visuallyhidden">Add</span>
              </a>
              <% end %>
            </div>
          </header>
